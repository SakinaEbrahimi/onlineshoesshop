<%- include('../include/headlogin.ejs') %>
</head>
<body>
        
    <div class="col-md-4 " style="align-items: center; display: flex; justify-content: center; margin: 0% auto; margin-bottom: 100px; margin-top: 100px;">
       
        <div class="card">
            <div class="card-body">
            <h4 class="card-title">Create Your Acount!..</h4>
            <form class="forms-sample" action="/signup" method="POST">
                <% if(errmessage){
                    %>
                    <div class="infobox clearfix infobox-close-wrapper success-bg mrg20B">
                        <p><%= errmessage%></p>
                    </div>
                    <%
                }%>
                <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" value="<%= oldemail%>" class="form-control" name="email" id="exampleInputEmail1" placeholder="Email">
                </div>
                <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" value="<%= oldpass%>" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <label for="exampleInputPassword1">Confirm Password</label>
                <input type="confpass" value="<%= oldconfpass%>" name="confpass" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                 <a class="btn btn-light" href="/women">Cancel</a>
                <input type="hidden" value="<%= csrfToken%>" name="_csrf">

            </form>
        </div>
    </div>

<%- include('../include/end.ejs')%>
