<%- include('../include/headlogin.ejs') %>
</head>
<body>                
    <div class="col-md-4 " style="align-items: center; display: flex; justify-content: center; margin: 0% auto; margin-top: 150px;">
        
        <div class="card">
            <div class="card-body">
            <h4 class="card-title">Login Page</h4>
            <form class="forms-sample" action="/login" method="POST">
                <% if(errmessage){
                    %>
                    <div class="infobox clearfix infobox-close-wrapper success-bg mrg20B">
                        <p><%= errmessage%></p>
                    </div>
                    <%
                }%>
                <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" name="email" id="exampleInputEmail1" placeholder="Email">
                </div>
                <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="text" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a class="btn btn-light" href="/women">Cancel</a>
                <input type="hidden" value="<%= csrfToken%>" name="_csrf">

            </form>
            </div>
        </div>
    </div>
    
 <%- include('../include/end.ejs')%>